@model HMS.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="container bg-success">
    <div class="card">
        <div class="card-header">
            <h3 class="justify-content-center">Create a new account</h3>
        </div>
        <div class="card-body">
       
                <div class="col-md-6">
                    <label class="font-weight-bold">FullName</label>
                    <input type="text" autocomplete="off" required="" name="FullName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">Email</label>
                    <input type="email" autocomplete="off" required="" name="Email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">UserName</label>
                    <input type="text" required="" name="UserName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">Password</label>
                    <input type="password" autocomplete="off" required="" name="Password" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">Confirm Password</label>
                    <input type="password" autocomplete="off" required="" name="Password" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">Country</label>
                    <input type="text" autocomplete="off" required="" name="Country" class="form-control" />
                </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="font-weight-bold">City</label>
                    <input type="text" required="" name="City" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="font-weight-bold">Address</label>
                    <textarea type="text" required="" name="Address" class="form-control"></textarea>
                </div> 
                </div>
                                           
        </div>
        <div class="card-footer">
            <div class="col-md-offset-10 col-md-10">
                <input type="submit" class="btn btn-danger" value="Save" />
            </div>
        </div>
    </div>

</div>

