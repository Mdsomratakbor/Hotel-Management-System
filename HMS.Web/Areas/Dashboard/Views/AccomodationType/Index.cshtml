   <!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Accomodation Types</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
    <hr />
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i> Search</button>
            <button class="btn btn-outline-secondary" type="button"><i class="fas fa-sync"></i> Reset</button>
            <button data-href="@Url.Action("Action", "AccomodationType")" class="data-btn btn btn-outline-secondary" type="button"  data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> Create</button>
        </div>
    </div>
</div>
<!-- /.content-header -->
<div class="row">
    <div class="col-md-12">
        @{Html.RenderAction("Listing");}
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">       
    </div>
</div>
<script>
    $(".data-btn").on('click', function () {
        $.ajax({
            method: 'Get',
            url:$(this).attr('data-href')
        }).done(function (response) {
            $('#myModal').modal('toggle');
            $("#myModal .modal-dialog").html(response);
        })
    })

</script>