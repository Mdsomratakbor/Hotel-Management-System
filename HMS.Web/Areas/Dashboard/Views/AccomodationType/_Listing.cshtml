@model HMS.Web.Areas.Dashboard.ViewModels.AccomodationTypeListingModel
@{var row = 0; }

<div style="height: 500px; overflow: auto;  overflow-y: scroll;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#SL</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count > 0)
            {
                foreach (var data in Model.AccomodationTypes)
                {
                    row = row + 1;
                    <tr>
                        <th scope="row">@row</th>
                        <td>@data.Name</td>
                        <td>@data.Description</td>
                        <td>
                            <button data-href="@Url.Action("Action", "AccomodationType", new { id = data.ID })" class="btn btn-success btn-sm"><i class="far fa-edit"></i></button>
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>

                }

            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div class="alert alert-secondary" role="alert">
                            Sorry! No record exist.
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
