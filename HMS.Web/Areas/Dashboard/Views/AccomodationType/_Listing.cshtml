@model HMS.Web.Areas.Dashboard.ViewModels.AccomodationTypeListingModel
@{var row = 0; }
   <!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">Accomodation Types</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
    <hr />
    <div class="input-group">
        <input type="text" class="form-control" placeholder="search by Accomodation Type Name" aria-label="Accomodation Type Name" aria-describedby="basic-addon2" id="searchText" value="@Model.SearchTerm">
        <div class="input-group-append">
            <button data-href="@Url.Action("Listing", "AccomodationType")" id="btnSearch" class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i> Search</button>
            <button data-href="@Url.Action("Listing", "AccomodationType")" id="btnReset" class="btn btn-outline-secondary" type="button"><i class="fas fa-sync"></i> Reset</button>
            <button data-href="@Url.Action("Action", "AccomodationType")" class="data-btn btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> Create</button>
        </div>
    </div>
</div>
<!-- /.content-header -->
<div style="height: 500px; overflow: auto;  overflow-y: scroll;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#SL</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count > 0)
            {
                foreach (var data in Model.AccomodationTypes)
                {
                    row = row + 1;
                    <tr>
                        <th scope="row">@row</th>
                        <td>@data.Name</td>
                        <td>@data.Description</td>
                        <td>
                            <button data-href="@Url.Action("Action", "AccomodationType", new { id = data.ID })" class="data-btn btn btn-success btn-sm"><i class="far fa-edit"></i></button>
                            <button data-href="@Url.Action("Delete", "AccomodationType", new { id = data.ID })" class="delete-btn btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>

                }

            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div class="alert alert-secondary" role="alert">
                            Sorry! No record exist.
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(".data-btn").on('click', function () {
        $.ajax({
            method: 'Get',
            url: $(this).attr('data-href')
        }).done(function (response) {
            $('#myModal').modal('toggle');
            $("#myModal .modal-dialog").html(response);
        })
    })
    $(".delete-btn").on('click', function () {

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    method: 'Get',
                    url: $(this).attr('data-href')
                }).done(function (response) {
                        if (response.Success) {
                        Swal.fire(
                        'Deleted!',
                        response.Message,
                        'success'
                        )
                        window.setTimeout(function () {
                            window.location.reload();
                        }, 1500)}
                        else {
                        Swal.fire(
                        'Deleted!',
                        response.Message,
                        'warning'
                        )}
                })
            }
        })
    })
    $("#btnSearch").click(function () {
        var searchText = $("#searchText").val();
        $.ajax({
            method: 'Get',
            url: $(this).attr('data-href'),
            data: { searchTearm: searchText }
        }).done(function (response) {
            $("#listData").html(response);
        }).fail(function (xhr, ajaxOptions, thrownError) {
            alert(xhr.status);
            console.log(thrownError);
        })
    })
    $("#btnReset").click(function () {
        var searchText = $("#searchText").val();
        $.ajax({
            method: 'Get',
            url: $(this).attr('data-href')
        }).done(function (response) {
            $("#listData").html(response);
        }).fail(function (xhr, ajaxOptions, thrownError) {
            alert(xhr.status);
            console.log(thrownError);
        })
    })

</script>